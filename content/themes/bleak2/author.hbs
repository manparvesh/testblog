{{!< default}}

{{#author}}

<header id="header" class="header{{#if cover_image}} has-cover{{else}}{{#if @blog.cover_image}} has-cover{{/if}}{{/if}}">
	<div class="inner">
		<span class="header-title">
			{{#if profile_image}}
			<figure class="header-image">
				<img src="{{img_url feature_url}}" alt="{{name}}" />
			</figure>
			{{/if}}
			<h1 class="header-name">{{name}} <em>{{ ../pagination.total}}</em></h1>
			{{#if bio}}
				<span class="header-description">{{bio}}</span>
			{{/if}}
			<span class="header-meta">
				{{#if location}}
				<span><i class="icon-location"></i> {{location}}</span>
				{{/if}}
				{{#if website}}
				<span><a href="{{website}}"><i class="icon-link"></i> Website</a></span>
				{{/if}}
			</span>
		</span>
	</div>
	{{#if cover_image}}
	<div class="header-cover" style="background-image: url('{{cover_image}}');"></div>
	{{else}}
	{{#if @blog.cover_image}}
	<div class="header-cover" style="background-image: url('{{@blog.cover_image}}');"></div>
	{{/if}}
	{{/if}}
</header>

{{/author}}

<div id="post-index" class="container">

	<main class="content" role="main">
	
		{{> "loop"}}
	
	</main>

</div>
